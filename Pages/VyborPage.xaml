<Page x:Class="TestEyp.Pages.VyborPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestEyp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="VyborPage">

    <Grid>
        <StackPanel x:Name="ViborSp" Margin="250,0,250,0">
            <TextBlock Text="Выберите группу"  FontSize="25"/>
            <ComboBox Name="GroupCmb" FontWeight="Black" FontSize="20" 
                      SelectionChanged="GroupCmb_SelectionChanged"/>
            
            <TextBlock Text="Выберите студента"  FontSize="25"/>
            <ComboBox Name="StudentCmb" FontWeight="Black" FontSize="20"
                      SelectionChanged="StudentCmb_SelectionChanged"/>
            
            <TextBlock Text="Выберите тест"  FontSize="25"/>
            <ComboBox Name="TestCmb" FontWeight="Black" FontSize="20"
                     SelectionChanged="TestCmb_SelectionChanged" />

            <Button Content="Начать" Name="StartBtn" FontSize="30"
                    FontWeight="Black" Margin="5, 50, 1, 10"
                    Click="StartBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
