<Page x:Class="TestEyp.Pages.Test1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestEyp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="380" d:DesignWidth="800"
      Title="Test1Page">

    <Grid>
        <TabControl x:Name="ProductsTc">
            <TabItem Name="v1">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">
                            1
                        </TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel>
                        <TextBlock Margin="5" HorizontalAlignment="Left" FontWeight="Bold"
                                   Text="Пути формирования отраслей промышленности:" FontSize="25"/>
                        <TextBlock Margin="7" HorizontalAlignment="Left"
                                   Text="1. Выделение отраслей промышленности из других отраслей национального хояйства." FontSize="15"/>
                        <TextBlock Margin="7" HorizontalAlignment="Left"
                                   Text="2. Углубление специализации в самой промышленности." FontSize="15"/>
                        <TextBlock Margin="7" HorizontalAlignment="Left"
                                   Text="3. Развитие концетрации в промышленности" FontSize="15"/>
                        <TextBlock Margin="7" HorizontalAlignment="Left"
                                   Text="4. Расширение кимбинирования в промышленности." FontSize="15"/>
                        <TextBlock Margin="7" HorizontalAlignment="Left"
                                   Text="5. Научно-технический прогресс." FontSize="15"/>

                        <TextBox Name="AnswerTb" HorizontalAlignment="Left" Width="200" />
                        <Separator Height="3" Width="0"/>

                        <Button x:Name="CheckBtn" Content="Проверить" Width="100" Click="CheckBtn_Click"  HorizontalAlignment="Left"/>
                    </StackPanel>
                </TabItem.Content>
                
            </TabItem>

            <TabItem Name="v2">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">
                            2
                        </TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel>
                        <TextBlock Margin="10" HorizontalAlignment="Left" FontWeight="Bold"
                                   Text="Принцип, лежащий в основе деления промышленной продукции на группы А и Б" FontSize="25"/>
                        <RadioButton Margin="10" HorizontalAlignment="Left"
                                   Content="Назначение производимой продукции;" FontSize="15"/>
                        <RadioButton Name="RB2" Margin="10" HorizontalAlignment="Left"
                                   Content="Фактическое использование продукции;" FontSize="15"/>
                        <RadioButton Margin="10" HorizontalAlignment="Left"
                                   Content="Общность основного сырья;" FontSize="15"/>
                        <RadioButton Margin="10" HorizontalAlignment="Left"
                                   Content="Сложность технологических процессов" FontSize="15"/>

                        <Separator Height="3" Width="0"/>

                        <Button x:Name="p2" Content="Проверить" Width="100" Click="p2_Click"  HorizontalAlignment="Left"/>
                    </StackPanel>
                </TabItem.Content>

            </TabItem>

            <TabItem Name="v3">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">
                            3
                        </TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel>
                        <TextBlock Margin="7" HorizontalAlignment="Left" FontWeight="Bold"
                                   Text="Отраслевая структура промышленности характеризируется:" FontSize="25"/>
                        <CheckBox Name="ChB1" Margin="7" HorizontalAlignment="Left"
                                   Content="Долей продукции отрасли в общем выпуске продукции;" FontSize="15"/>
                        <CheckBox Name="ChB2"  Margin="7" HorizontalAlignment="Left"
                                   Content="Долей основных фондов отрасли в общем объеме основных фондов промышленности;" FontSize="15"/>
                        <CheckBox Name="ChB3"  Margin="7" HorizontalAlignment="Left"
                                   Content="Долей оборотных фондов в общем объеме оборотных фондов промышленности;" FontSize="15"/>
                        <CheckBox Name="ChB4"  Margin="7" HorizontalAlignment="Left"
                                   Content="Долей работников, занятых в отрасли, в общей численности работников промышленности;" FontSize="15"/>
                        <CheckBox Name="ChB5"  Margin="7" HorizontalAlignment="Left"
                                   Content="Долей прибыли отрасли в общей прибыли промышленности;" FontSize="15"/>

                        <Separator Height="3" Width="0"/>

                        <Button x:Name="p3" Content="Проверить" Width="100" Click="p3_Click"  HorizontalAlignment="Left"/>
                    </StackPanel>
                </TabItem.Content>

            </TabItem>
        </TabControl>
    </Grid>
</Page>
