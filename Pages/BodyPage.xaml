<Page x:Class="TestEyp.Pages.BodyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestEyp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="BodyPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Тесты по дисциплине" FontSize="30"
                   FontWeight="Bold"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <TextBlock Text="Экономика отрасли" FontSize="30"
                   FontWeight="Bold" Grid.Row="1"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <Button Content="Преподаватель"  Grid.Row="2"
                VerticalAlignment="Center" Height="40" 
                Width="300" HorizontalAlignment="Center"
                Name="TeacherBtn" Click="TeacherBtn_Click"/>
        
        <Button Content="Студент"  Grid.Row="3"
                VerticalAlignment="Center" Height="40" 
                Width="300" HorizontalAlignment="Center"
                Name="StudentBtn" Click="StudentBtn_Click_1"/>

    </Grid>
</Page>
